<%- include('../partials/header')%>
<link rel="stylesheet" href="/css/admin.css" >
<%- include('../partials/header-closer')%>

<body>
<%- include('../partials/navbar')%>
<div class="welcome">
    <h4>Manage Department</h4>
</div>
<br>

<br>
<div class="sear">
    <div class="manage-search">
        <!-- <p>Search:</p> -->
        <form  action="#">
          <input type="text" placeholder="Search" name="search" style="padding: 8px;">
          <button type="submit"><i class="fa fa-search"; style="font-size: 20px; padding:5px;border-radius:10px;"></i></button>
        </form>
    </div>
    <div class="che">   
        <a class="generate" href="/admin/create-department">
            <button type="submit">Create</button>
        </a>
    </div>
</div>

<br>
<div class="tables">

    <table>
        <tr>
            <th>Roll no.</th>
            <th>Course Name</th>
            <th>Manage</th>
        </tr>
        <% departmentList.forEach((dept, index) => { %>
          <tr>
            <td><%=index+1%></td>
            <td><%=dept.name%> </td>
            <td>
                <div class="manage-but">
                    <a href="/admin/update-department?id=<%=dept._id%>" style="padding: 5px;background-color:rgb(34, 235, 40);border:none ;border-radius:5px;color:white">Edit</a>
                    <a href="/admin/delete-department?id=<%=dept._id%>" style="padding: 5px;background-color:rgb(244, 16, 16);border:none ;border-radius:5px;color:white">Remove</a>
                </div>
            </td>
          </tr>
        <% }) %>
    </table>
 </div>
 <br>
